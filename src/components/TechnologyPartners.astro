---
// Example partner data (you can add more or fetch from CMS)
const partners = [
  { name: "Xero", logo: "/partners/xero.png", url: "https://www.xero.com/" },
  {
    name: "QuickBooks",
    logo: "/partners/quickbooks.png",
    url: "https://quickbooks.intuit.com/",
  },
  { name: "MYOB", logo: "/partners/myob.png", url: "https://www.myob.com/" },
  {
    name: "NetSuite",
    logo: "/partners/netsuite.png",
    url: "https://www.netsuite.com/",
  },
  {
    name: "Bill.com",
    logo: "/partners/billdotcom.png",
    url: "https://www.bill.com/",
  },
  { name: "Dext", logo: "/partners/dext.png", url: "https://dext.com/" },
  {
    name: "Deputy",
    logo: "/partners/deputy.png",
    url: "https://www.deputy.com/",
  },
  {
    name: "Xero Workpapers",
    logo: "/partners/xero-workpapers.png",
    url: "https://www.xero.com/workpapers/",
  },
];
---

<style>
  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1.5rem;
    align-items: center;
  }
  .partner-logo {
    width: 100%;
    max-height: 60px;
    object-fit: contain;
    filter: grayscale(0.6);
    transition: filter 0.3s ease;
  }
  .partner-logo:hover {
    filter: grayscale(0);
  }
</style>

<div class="partners-grid" aria-label="Technology Partners">
  {
    partners.map(({ name, logo, url }) => (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={`Visit ${name} website`}
      >
        <img src={logo} alt={`${name} logo`} class="partner-logo" />
      </a>
    ))
  }
</div>
